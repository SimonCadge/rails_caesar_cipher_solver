<h1>Caesar Cipher Solver</h1>

<ul class="list-group">
    <% @weighted_permutations.each do |permutation| %>
        <%= content_tag :li, {"class"=>"list-group-item d-flex justify-content-between align-items-center #{(permutation['isReliable'] and permutation['confidence'] > 5) ? 'list-group-item-success' : 'list-group-item-danger'}", "data-bs-toggle"=>"tooltip", "data-bs-placement"=>"top", "title"=>"DetectLanguage confidence: #{permutation['confidence']}"} do %>
            <%= "%s" % permutation['text'] %>
            <span class="badge rounded-pill tertiary">Offset: <%= "%s" % permutation['offset'] %></span>
        <% end %>
    <% end %>
</ul>

<%= button_to "Process another Cipher", "/solver", :method => :get, class: "btn mt-2 tertiary-button" %>